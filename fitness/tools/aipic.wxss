.page{
  height: 100vh;overflow-y:scroll;
}
.choose{
  text-align: left;padding:10px 10px;
}
.result{
  height:calc(100vh - 50vw - 110px);overflow-y: scroll;border-bottom: 1px solid #f2f2f2;
}
.result scroll-view{
  height: calc(100% - 35px);width: 100%;border-top: 1px solid #f2f2f2;
}
.result scroll-view .result-item:first-child{
  border-top:none;
}
.camera{
  border:3px dashed #f0f0f0;
  width:calc(50vw - 20px);
  height:calc(50vw - 20px);
  margin:0px auto;
  display: inline-block;vertical-align: top;text-align: center; 
}
.camera image{
   width:40px;height: 40px;margin:30px auto;
}
.camera camera{
  width:calc(100% - 2px);height:calc(50vw - 20px);margin:2px auto;
}
.picture{
  display: inline-block;vertical-align: top;margin-left:5px;border:3px solid #f0f0f0;
  width: calc(50vw - 20px);height:calc(50vw - 20px);overflow-x: scroll;text-align: left;overflow-y: hidden;
}
.picture .desc{
  color:#ccc;line-height: 15px;padding:20px 10px;font-size:14px;
}
.picture .desc view{
  line-height: 1.5;
}
.picture image{
  width:calc(25vw - 20px);height:calc(25vw - 20px);display: inline-block;vertical-align: top;margin-left: 5px;
  margin-top:5px;
  border:1px solid #f5f5f5;border-radius: 2px;
}
.picture .active{
  border:1px solid #F47378;
}
.right{
  width:20px;height:106px;display: inline-block;vertical-align: top;
}
.right image{
  width:20px;height: 20px;vertical-align: top;margin:45px auto;
}
.right{
  background-color:#f0f0f0;
}
.result-item{
  border-top:1px solid #f2f2f2;padding:10px 15px;clear:both;
  height: 60px;
}
.item-pic{
  width:50px;height: 50px;border-radius: 3px;margin:5px 0px;display: inline-block;
  vertical-align: top;border:1px solid #bfbfbf;
}
.item-info{
  width:calc(100% - 120px);margin:5px 0px;padding:0 0px;display: inline-block;vertical-align: top;
  text-align: left;font-size:13px;color:#555;margin-left: 15px;height: 50px;
}

.item-like{
  display: inline-block;vertical-align: top;margin:5px auto;background-color:#fff;
  height:50px;border-radius: 50%;width:50px;text-align: center;
  border:1px solid #6BD089;color:#6BD089;overflow-y: hidden;
} 
.item-like .percent{
  font-size:16px;line-height: 1;margin-top:10px;
}
.item-like .desc{
  font-size:10px;
}
.like-blue{
  color:#6EC7F0;border:1px solid #6EC7F0;
} 
.like-orange{
  color:#FFC227;border:1px solid #FFC227;
}
.like-grey{
 color:#ccc;border:1px solid #ccc;
}
.item-name{
  font-size:14px;
}
.result-label{
  text-align: left;padding:5px 15px;color:#999;font-size:14px;
}
.calorie{
  color:#F47378;
}
.footer{
  color:#ccc;font-size:10px;position: absolute;bottom:5px;left: 0px;width:calc(100% - 5px);
  text-align: right;height: 15px; right: 5px;
}
.null{
  font-size: 14px;
  text-align: center;line-height: 3;
}
.bottom {
  width: 100%;height: 50px;position: absolute;left: 0;bottom: 30px;z-index: 1000;
  text-align: center;
}
.bottom .bottom-btn{
  width:50px;height:50px;border-radius: 50%;margin:0px 20px;
}
.bottom-btn{ 
  background-color: #73CDF6;
  background-image:linear-gradient(141deg,#7DF3D1 0%,#7EEEE0 51%,#79EAF4 75%); 
}
.item-det{
  padding:0px 5px;background-color: #7DF3D1;color:#fff;margin-left: 5px; font-size: 13px;
}
.item-alias{
  font-size: 13px;color:#ccc;margin-left: 5px;
}