/* fitness/food/detail.wxss */
.page{
  width:100vw;height:100vh;
}
.head{
  background-color:#fff;height: calc(38vw + 32px);padding-top:2vw;
}

.food-card{
  border-radius: 5px;margin:0px 3vw; 
  background-color: #73CDF6;color:#fff;
  background-image:linear-gradient(141deg,#73CDF6 0%,#94D8F6 51%,#C8EBFA 75%);
  height: 30vw;padding:3vw 3vw;
}
.food-img  {
  width: 20vw;height: 20vw;margin:0vw 2vw;border-radius: 3px;background-color:#fff;
  display: inline-block;vertical-align: top;
}
.food-info{
  width:60vw;height: 20vw;margin:0 auto;display: inline-block;vertical-align: top;
  margin-left:2vw;
}
.food-img image{
  width: 100%;height: 100%;
}
.food-kcal{
  margin-top:8px;
}
.tags{
  width: 100%;padding:0px 2vw;margin-top:15px;font-size: 14px;
}
.tags .tag{
  background-color: #fff;color:#00B050;padding:1px 8px;border-radius: 15px;
  margin-right: 8px;
}
.tags .tag-danger{
  background-color:rgb(248, 76, 81);color:#fff;
}
.cates{width: 100%;height:40px; background-color: #fff;color:#999 }
.cate-item{
  width: 25vw;height:28px;display:inline-block;text-align: center;line-height: 28px;margin-top:10px;

}
.cate-active{
  color:#73CDF6;border-bottom:2px solid #73CDF6;
}
.elelist{
  width: 100%;background-color: #fff;
}

.elelist .item,.elelist .item-head{
  padding:0px 10px;clear:both;height: 48px;line-height: 48px;border-bottom: 1px solid #f2f2f2;
  width:100%;background-color: #fff;
}
.elelist .item-head{
  color:#999;background-color:#f5f5f5;
}
.elelist .item view,.elelist .item-head  view{
  float:left;font-size:14px;
} 

.elelist .item-head .left,.elelist  .item-head .center{
  width:50%;padding-left:0px;word-break: break-all; 
}
.elelist .item .left,.elelist .item .center{
  width:calc(50% - 20px);padding-left: 15px;word-break: break-all; 
}
.elelist   .right{
  width:20%;text-align: center;
}
.body{
  height: calc(100% - 35vw)
}
.base{
  height: 100%;overflow-y: scroll;padding:20px 15px;background-color:#fff;
}
/**index.wxss**/
ec-canvas {
  width: 100%;
  height: 100%;
}
.ec-charts{
  height: 68vw;
}