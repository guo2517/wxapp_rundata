@import "../../common/tpl/verify.wxss";
.index-tabs{
  background-color: #fff;
  height: auto;min-height: calc(100% - 60px);
}
.tabs-title .item{
  display: inline-block;width:33%;height: 38px;line-height: 38px;
  margin:0 auto;text-align: center;font-size:14px;color:#999;
}
.search{
  height: 40px;width:92vw;text-align: center;
  border-radius: 4px;margin:10px auto;background-color:#fff;
}
.search-input{
  width:calc(100% - 65px);display: inline-block;margin:0 auto;
  background-color: #fff;border:none;
  height: 30px;line-height: 30px;padding:5px 10px;vertical-align: top;
}
.search-btn{
  display: inline-block;margin:0 auto;vertical-align: top;
  height: 40px;background-color:#fff; width:40px;
}
.search-btn image{
  width:22px;height: 22px;margin:9px auto;
}
scroll-view{
  height: 100%;
}
.tabbar-bottom{
  position: fixed;background-color: #FFF;bottom: 0px;left: 0px;
  width: 100%;height: 55px;padding-top:8px;
  z-index: 999999; overflow: hidden;
  color: #8a8a8a; 
}
.tabbar-bottom .tabbar-item{
  display: inline-block;
  text-align: center; 
  vertical-align: top;
  width:33.3%; 
}
.tabbar-bottom .tabbar-item .icon{
  height: 30px;
}
.tabbar-bottom .tabbar-item .icon image{
  vertical-align: middle;
  width: 27px;height: 27px;
}
.tabbar-bottom .tabbar-item .text{
  font-size: 13px;
}
.tabbar-bottom .tabbar-active{
  color:#EE5E7B;
}
.avatar{
  width:50px;height:50px;border-radius: 50px;
}
.avatar40{
  width:40px;height:40px;border-radius: 50px;
}
.slide-image{
  width: 100%;
}
.page{
  background-color:#f8f8f8;height: calc(100% - 63px)
}
.item-row{
  background-color: #fff;
  padding-bottom: 5px;
  position: relative;
}
.item-row .item-title{
  margin-bottom: 3px;
  height:25px;line-height: 25px;
  text-align:left;
  font-size:13px;color:#fff;
}
.item-row .item-title text{
  padding: 4px 15px;
   text-align: center;border-radius:0px 15px  15px 0px;background-color:#EE5E7B;
}
.item-row .shop{
  height: 55px;
}
.item-row .content{
  text-align:left;
}
.index-head{
  position: relative;
  left: 0px;
  z-index: 1000;
  clear: both;
  padding:5px 0px ; 
}
.index-head .bg{
  width: auto;
  
  height: 52px;
  padding:5px 5px;
}
.index-head .sname{
  color:#fff;
  height: 50px;width:auto;text-align: left;
}
.index-head .name{
  word-break: break-all;font-size:14px;
}
.index-head .tobtn{
  text-align: center;font-size: 12px;color:#fff;
  padding:0px 10px;
  float:right;background-color: #FF8012;
  margin:9px 0px;margin-right:10px;border-radius: 15px;
  height:22px;line-height: 22px;
}
.index-head .pic,.index-head .name{
  float:left;vertical-align: top;
}
.index-head .pic{width:50px;text-align: center;background-color: #fff;border-radius:5px;height: 50px;margin:0px 10px;}

.index-head image{
  height: 40px;width: 40px;margin:5px auto;
}
.index-head .title{
  height: 16px;text-align: left;overflow: hidden;line-height: 17px;
}
.index-head .info{
  height: 35px;text-align: left;overflow: hidden;
}
.tobtn view{
  display: inline-block;vertical-align: top;padding:0px 3px;height: 25px;
  text-align: center;
}
.tobtn image{
  width: 15px;height: 15px;vertical-align: top;
}
 
.page-my .user{
  background-color:#EE5E7B;
  text-align: center;
  padding: 5px 0px;
  color:#fff;height:260rpx;
}
.page-my .user .avatar{
  width: 100rpx;height: 100rpx;border-radius: 50%;display: block;margin:6px auto;
  margin-top:20px;
}
.page-my .nickname{
  padding:10px 30px;height: 15px;overflow: hidden;text-align: center;font-size: 16px;line-height: 15px;color:#fff;font-weight: 600;
}
.page-my .my-menus{
  margin: 15px 20px;
  border-radius: 6px;
  background-color:#fff;
}
.page-my .menu-item{
  clear: both;height:100rpx;line-height:100rpx;text-align: left;font-size: 14px;
  border-bottom: 2rpx solid #f2f2f2;
}
.menu-item .menu-left{
  float: left;
  width:auto;
}
.menu-item .menu-left image{
  width:40rpx;height: 40rpx;display: inline-block;vertical-align: top;
  margin-top:30rpx;margin-left:20px;margin-right: 20px;
}