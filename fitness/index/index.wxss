.news-content{
  text-align:left;padding:2px 10px;font-weight: 500;font-size:34rpx;line-height: 1.3;
}
.news-before{
  color:#999;font-size:12px;
}

.news-head{
  height: 80rpx;padding-top:5px;
}
.news-right view{
  display: block;
}
.news-left{
  display:  inline-block;width:120rpx;vertical-align: top;text-align: center;
  height: 100%;
}
.news-center{
  display: inline-block;width:40%;vertical-align: top;
  height: 100%;
}
.news-right{
  display: inline-block;width:calc(60% - 130rpx);vertical-align: top;height: 100%;
}
.news-right view{
  float:right;text-align: center;padding:0px 4px;border-radius: 2px;color:#fff;
  font-size: 12px;margin:0px 0px;margin-right: 5px;
}
