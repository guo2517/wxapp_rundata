}
.news-avatar{
  width:60rpx;height: 60rpx;border-radius: 50%;margin:0px auto;
  vertical-align: middle;
}
.news-nickname{
  font-size:14px;color:#FB7299;height: 16px;line-height: 16px;
}
.news{
  min-height:200rpx;max-height: 400rpx;border-top:1px solid #f5f5f5;
  padding:10rpx 0px;margin-bottom:10px;background-color: #fff;
}
.tabs-content{
    background-color: #f5f5f5;
}
.index-tabs{
  background-color: #fff;
  height: auto; 
}
.tabs-title .item{
  display: inline-block;width:33.3%;height: 38px;line-height: 38px;
  margin:0 auto;text-align: center;font-size:14px;color:#999;
}
.tabs-title .active{
  color:#F2363D;border-bottom: 2px solid #F2363D;
}

scroll-view{
  height: 100%;
}
.tabbar-bottom{
  position: fixed;background-color: #FFF;bottom: 0px;left: 0px;
  width: 100%;height: 55px;padding-top:8px;
  z-index: 999999; overflow: hidden;
  color: #8a8a8a; 
}
.tabbar-bottom .tabbar-item{
  display: inline-block;
  text-align: center; 
  vertical-align: top;
  width:33.3%; 
}
.tabbar-bottom .tabbar-item .icon{
  height: 30px;
}
.tabbar-bottom .tabbar-item .icon image{
  vertical-align: middle;
  width: 27px;height: 27px;
}
.tabbar-bottom .tabbar-item .text{
  font-size: 13px;
}
.tabbar-bottom .tabbar-active{
  color:#EE5E7B;
}
.avatar{
